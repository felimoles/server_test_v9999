extends ./layout.jade
html(lang='en')

block contenido
		div(class="col-md-8 col-md-offset-2")
			form(action="/sesion" method="POST")
				div(class="form-group")
					label(for="email") E-Mail
					input(type="text" class="form-control" id="email" name="email" email="email" placeholder="Ingrese correo electronico" required)
				div(class="form-group")
					label(for="password") Contraseña
					input(type="password" class="form-control" id="password" name="password" placeholder="Ingrese contraseña" required)

				div(align="center")
					button(type="submit" class="btn btn-success") Ingresar
				
				p
				div(align="center") 
					a(href="/sign_up" class="btn btn-warning") Registrar
			if	feedback
			div(align="center").col-md-12
				div(class="alert alert-" + type, role="alert") #{feedback}

			